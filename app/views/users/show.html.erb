<p id="notice"><%= notice %></p>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<div>
	<p>The current date and time is <%= Time.now %></p>
</div>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
	Account created on <%= @user.created_at %><br>
	Account last updated on <%= @user.updated_at %>
</p>

<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-info btn-sm' %> |
<%= link_to 'Back', users_path, class: 'btn btn-info btn-sm' %>
